@model TMS.Library.TMS.Persons.Skills.PersonLevels
@using lr = Resources.Resources;
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="k-popup-edit-form k-window-content k-content">
    <div class="form-horizontal form-person-popup">
        <form id="Personleval" class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-3 col-lg-3 control-label" })
                <div class="col-md-7 col-lg-7 col-sm-11">
                    @(Html.Kendo().TextBoxFor(c => c.Name).HtmlAttributes(new { @class = "form-control ", style = "width:100%", validationmessage = lr.PersonLevelNameRequired }))
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "col-md-3 col-lg-3 control-label" })
                <div class="col-md-7 col-lg-7 col-sm-11">
                    @(Html.TextAreaFor(c => c.Description, new { @class = " form-control k-textbox", style = "width:100%", validationmessage = lr.PersonLevelDescriptionRequired }))
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group-footer">
                @Html.Kendo().Button().Name("Default").Content(lr.CencelRecordGeneralButton).HtmlAttributes(new { @class = "k-button" })
                @Html.Kendo().Button().Name("Primary").Content(lr.SaveRecordGeneralButton).HtmlAttributes(new { @class = "k-button k-primary", @type = "submit" })
            </div>
        </form>
    </div>
</div>
<script>

    jQuery(function () {
        var validator = jQuery("#Personleval").kendoValidator().data("kendoValidator");
        var status = jQuery(".status");

        jQuery("#Personleval").submit(function (event) {
            event.preventDefault();
            if (validator.validate()) {
                status.text("Hooray! Your tickets has been booked!")
                    .removeClass("invalid")
                    .addClass("valid");
            } else {
                status.text("Oops! There is invalid data in the form.")
                    .removeClass("valid")
                    .addClass("invalid");
            }
        });
    });
</script>
<style>
    @@media screen and (max-width: 1024px) {

        span.k-tooltip {
            position: absolute;
            margin-top: -10px;
        }
    }
     @@media screen and (min-width: 1024px) {

        span.k-tooltip {
            position: absolute;
            margin-top: -2px;
        }
    }
</style>