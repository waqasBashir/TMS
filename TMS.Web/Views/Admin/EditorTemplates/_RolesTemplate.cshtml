@model TMS.Library.Entities.Common.Roles.Roles

<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">

    <div class="form-group">
        @Html.LabelFor(model => model.RolePrimaryName, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.RolePrimaryName).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.RolePrimaryName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RoleSecondaryName, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.RoleSecondaryName).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.RoleSecondaryName)
        </div>
    </div>
    <div class="form-group">
        @*@Html.LabelFor(model => model.IsDefaultTrainer, new { @class = "col-md-3 col-lg-3 control-label" })*@
        <div class="col-md-2 col-lg-2 col-sm-2"></div>
            <div class="col-md-7 col-lg-7 col-sm-11" style="margin-left:30px;">
                @Html.Kendo().CheckBoxFor(model => model.IsDefaultTrainer)
            </div>
        </div>
</div>
