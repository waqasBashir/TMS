@model  TMS.Library.TMS.Organization.POC.PointsOfContact
@using lr = Resources.Resources
<div class="Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group UserDDL">
        @Html.LabelFor(model => model.PersonID, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(m => m.PersonID)
            .HtmlAttributes(new { style = "width:100%" })
            .DataTextField("Text")
            .DataValueField("Value")
                     .OptionLabel(lr.PointofContactPersonOptionalLabel)
          // .OptionLabel(new { Text = lr.PointofContactPersonOptionalLabel, Value = 0 })
                            .DataSource(dataSource => { dataSource.Read(read => read.Action("UserAll", "DDL")); }))
            @Html.ValidationMessageFor(model => model.PersonID)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RelationID, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(m => m.RelationID)
            .HtmlAttributes(new { style = "width:100%" })
            .DataTextField("Text")
            .DataValueField("Value")
              // .OptionLabel(lr.OrganizationTypeOptionalLabel)
           .OptionLabel(new { Text = lr.PointofContactPurposeOptionalLabel, Value = 0 })
                    .DataSource(dataSource => { dataSource.Read(read => read.Action("OrganizationPersonRelationTypes", "DDL")); }))
            @Html.ValidationMessageFor(model => model.RelationID)
        </div>
    </div>
    <div class="form-group">
        @*@Html.LabelFor(model => model.IsPrimary, new { @class = "col-md-3 col-lg-3 control-label" })*@
        <div class="col-md-2 col-lg-2"></div>
        <div class="col-md-7 col-lg-7 col-sm-11" style="margin-left:30px;">
            @Html.Kendo().CheckBoxFor(model => model.IsPrimary)
        </div>
        </div>
</div>
