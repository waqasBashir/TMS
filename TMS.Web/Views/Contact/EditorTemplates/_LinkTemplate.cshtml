@model TMS.Library.Common.Address.Links
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.LinkType, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.LinkType).DataTextField("Text").DataValueField("Value").OptionLabel(lr.PersonContactLinkTypeOptionalLabel).HtmlAttributes(new { @class = "form-control", style = "width:100%" })
              .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.LinkType>(typeof(TMS.Library.LinkType))))
            @Html.ValidationMessageFor(model => model.LinkType)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Link, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.Link).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.Link)
        </div>
    </div>
</div>