@model TMS.Library.TMS.Persons.Others.PersonRelation
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.RelationTo, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(m => m.RelationTo)
            .HtmlAttributes(new { style = "width:100%" })
            .DataTextField("Text")
            .DataValueField("Value")
            .OptionLabel(lr.PersonRelationToOptionalLabel)
                    .DataSource(dataSource => { dataSource.Read(read => read.Action("PersonAll", "DDL")); }))
            @Html.ValidationMessageFor(model => model.RelationTo)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RelationType, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.RelationType).DataTextField("Text").DataValueField("Value").OptionLabel(lr.PersonRelationTypeOptionalLabel).HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                                                       .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.PersonRelationType>(typeof(TMS.Library.PersonRelationType))))
            @Html.ValidationMessageFor(model => model.RelationType)
        </div>
    </div>
</div>
