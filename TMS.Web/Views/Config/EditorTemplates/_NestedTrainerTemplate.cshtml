@model TMS.Library.Entities.Common.Roles.TrainerOpenMapping
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.PersonID, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(m => m.PersonID)
            .HtmlAttributes(new { style = "width:100%" })
            .DataTextField("Text")
            .DataValueField("Value").Filter(Kendo.Mvc.UI.FilterType.Contains)
            .OptionLabel(lr.TrainerOptionalLabel)
                    .DataSource(dataSource => { dataSource.Read(read => read.Action("Trainer", "DDL").Data("filterrelateditems")); }))
            @Html.ValidationMessageFor(model => model.PersonID)
        </div>
    </div>
</div>
