@model TMS.Library.Entities.Common.Configuration.CourseLogisticRequirementsMapping
@using lr = Resources.Resources
<div class="Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<input type="hidden" id="modelid" value="@Model.ID">
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.CourseLogisticRequirementID, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(m => m.CourseLogisticRequirementID)
            .HtmlAttributes(new { style = "width:100%" })
            .DataTextField("Text")
            .DataValueField("Value").Filter(Kendo.Mvc.UI.FilterType.Contains)
            .OptionLabel(lr.CourseLogisticRequirementsTitle)
                    .DataSource(dataSource => { dataSource.Read(read => read.Action("CourseLogistic", "DDL").Data("filterrelateditems")); }))
            @Html.ValidationMessageFor(model => model.CourseLogisticRequirementID)
        </div>
    </div>
</div>






