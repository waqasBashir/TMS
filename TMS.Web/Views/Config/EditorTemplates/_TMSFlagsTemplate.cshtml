@model TMS.Library.TMS.Admin.Config.PersonFlags

<div class="k-edit-form-container">
    <div class=" Alertbox alert alert-danger" style="display:none">
        <ul class="errors"></ul>
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.P_FlagName)
    </div>
    <div class="editor-field">
        @Html.Kendo().TextBoxFor(model => model.P_FlagName).HtmlAttributes(new { @style = "width:100%" })
        @Html.ValidationMessageFor(model => model.P_FlagName)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.FlagColor)
    </div>
    <div class="editor-field">
        @(Html.Kendo().ColorPickerFor(m => m.FlagColor))
        @Html.ValidationMessageFor(model => model.FlagColor)
    </div>
</div>
<style>
    
    .k-slider-track{
        
        height:10px !important;
    }

      
</style>

