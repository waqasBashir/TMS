@model TMS.Library.Entities.Common.Configuration.Categories.TMSCategories
@using lr = Resources.Resources

<div class="Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<input type="hidden" id="modelid" value="@Model.ID">
<div class="form-horizontal form-person-popup">

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryType, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.CategoryType).DataTextField("Text").DataValueField("Value")
              //   .OptionLabel(new { Text = lr.ClassTypeOptionalLabel, Value = 0 })
              .OptionLabel(lr.CategoryTypeOptionalLabel)
              .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                                               .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.CategoryType>(typeof(TMS.Library.CategoryType))))
            @Html.ValidationMessageFor(model => model.CategoryType)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PrimaryCategoryName, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.PrimaryCategoryName).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.PrimaryCategoryName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SecondaryCategoryName, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.SecondaryCategoryName).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.SecondaryCategoryName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Code, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.Code).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.Code)
        </div>
    </div>

    <div class="form-group">
       
        <div class="col-md-7 col-lg-7 col-sm-11 col-lg-offset-3">
            @Html.Kendo().CheckBoxFor(model => model.IsActive)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PrimaryDescription, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.TextAreaFor(c => c.PrimaryDescription, new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.PrimaryDescription)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SecondaryDescription, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.TextAreaFor(c => c.SecondaryDescription, new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.SecondaryDescription)
        </div>
    </div>

</div>
<style>
    input.k-checkbox + label {
        line-height: 1.25em;
    }
</style>