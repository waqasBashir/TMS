@model TMS.Library.TMS.Persons.Education.PersonCertifications
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.CertificationP_Name, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.CertificationP_Name).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.CertificationP_Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CertificationReferenceNo, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.CertificationReferenceNo).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.CertificationReferenceNo)
        </div>
    </div>

    <div class="form-group" style="margin:0; padding:0px;">
        @Html.LabelFor(model => model.CertificationDurationType, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-4 col-lg-4 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.CertificationDurationType).DataTextField("Text").DataValueField("Value").OptionLabel(lr.CourseDurationTypeOptionalLabel).HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                                               .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.CourseDurationType>(typeof(TMS.Library.CourseDurationType))))
            @Html.ValidationMessageFor(model => model.CertificationDurationType)
        </div>

        <div class="col-md-3 col-lg-3 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.CertificationDuration).HtmlAttributes(new { @class = "form-control ", style = "width:100%", @placeHolder = lr.PersonEducationCertificationsDurationPlaceHolder }))
            @Html.ValidationMessageFor(model => model.CertificationDuration)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CompletionYear, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(model => model.CompletionYear).HtmlAttributes(new { style = "width:100%", @class = "session" }).DataTextField("Text").DataValueField("Value").OptionLabel(lr.PersonEducationCertificationsCompletionYearOptionalLabel).DataSource(source => { source.Read(read => { read.Action("PersonEducationCertificationsYears", "DDL"); }); })
                      )
            @Html.ValidationMessageFor(model => model.CompletionYear)
        </div>
    </div>


    <div class="form-group" style="margin:0; padding:0px;">
        @Html.LabelFor(model => model.AwardingBody, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(model => model.AwardingBody).HtmlAttributes(new { @class = "form-control", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.AwardingBody)
        </div>
    </div>
    <div class="form-group" style="margin:0; padding:0px;">
        @Html.LabelFor(model => model.Institute, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(model => model.Institute).HtmlAttributes(new { @class = "form-control", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.Institute)
        </div>
    </div>
    <div class="form-group" style="margin:0; padding:0px;">
        @Html.LabelFor(model => model.ValidityDuration, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">

            @Html.Kendo().TextBoxFor(model => model.ValidityDuration).HtmlAttributes(new { @class = "form-control", style = "width:100%" })
            @Html.ValidationMessageFor(model => model.ValidityDuration)
        </div>
    </div>
</div>

