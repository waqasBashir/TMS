@model TMS.Library.TMS.Persons.Education.PersonAchievements
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.P_Title, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.P_Title).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.P_Title)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Type, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.Type).DataTextField("Text").DataValueField("Value").OptionLabel(lr.PersonEducationAchievementTypeOptionalLabel).HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                                               .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.AchievementType>(typeof(TMS.Library.AchievementType))))
            @Html.ValidationMessageFor(model => model.Type)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AnnouncedDate, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DatePickerFor(c => c.AnnouncedDate).Culture(CurrentCulture).HtmlAttributes(new { @style = "width:100%" }).Format(KendoDateFormat).Max(DateTime.Now).Value(string.Empty))
            @Html.ValidationMessageFor(model => model.AnnouncedDate)
        </div>
    </div>
    <div class="form-group" style="margin:0; padding:0px;">
        @Html.LabelFor(model => model.Description, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">

            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "width:100%" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
</div>