
@model TMS.Library.TMS.Persons.Education.PersonSuggestedTrainings
@using lr = Resources.Resources
<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.TrainingP_Title, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.TrainingP_Title).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.TrainingP_Title)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LearningObjective, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.TextAreaFor(c => c.LearningObjective, new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.LearningObjective)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CourseOutline, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.TextAreaFor(c => c.CourseOutline, new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.CourseOutline)
        </div>
    </div>
    
</div>