@model TMS.Library.Entities.Common.Configuration.FocusAreas
@using lr = Resources.Resources


<div class="Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<input type="hidden" id="modelid" value="@Model.ID">
<div class="form-horizontal form-person-popup">

    <div class="form-group">
        @Html.Label(lr.FocusAreaTitle, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(model => model.FocusID)
                .DataTextField("PrimaryFocusAreaName")
                .DataValueField("ID")
                .HtmlAttributes(new { style = "width:100%" })
                .OptionLabel(lr.FocusAreaTitle)
                .DataSource(source =>
                {
                    source.Read(read => read.Action("CoordinateGroups", "Program"));
                })
            )
           
        </div>
    </div>

</div>
