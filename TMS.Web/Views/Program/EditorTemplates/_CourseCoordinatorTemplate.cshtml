@model TMS.Library.Entities.Coordinator.CourseCoordinatorMapping
@using lr = Resources.Resources

<div class="Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    @Html.HiddenFor(model=>model.ID)
    <div class="form-group">
        @Html.Label(lr.PersonIsCoordinator, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(model => model.CoordinateID)
                .DataTextField("Text")
                .DataValueField("Value")
                .HtmlAttributes(new { style = "width:100%" })
                .OptionLabel(lr.CourseCoordinatorTitle)
                .DataSource(source =>
                {
                    source.Read(read => read.Action("CourseCoordinator", "DDL"));
                })
            )
            @Html.ValidationMessageFor(model => model.CoordinateID)
        </div>
    </div>

</div>

